// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PayableStatus {
  pending
  paid
}
model User {
  id String @id @default(uuid())
  name String
  email String
  cpf String
  password String
  checkout Checkout[]
  createdAt DateTime @default(now())
}

model Seller {
  id String @id @default(uuid())
  name String
  email String
  cnpj String
  password String
  checkout Checkout[]
  payable Payable[]
createdAt DateTime @default(now())
}

model Checkout {
  id String @id @default(uuid())
  price Decimal
  description String
  card_number String
  card_owner String
  card_expiring_date String
  seller Seller @relation(fields: [sellerId],references: [id])
  sellerId String
  user User @relation(fields: [userId],references: [id])
  userId String
  payable Payable[]
createdAt DateTime @default(now())
}


model Payable {
  id String @id @default(uuid())
  status PayableStatus @default(pending)
  payment_date String
  type_payment String
  balance Decimal
  seller Seller @relation(fields: [sellerId],references: [id])
  sellerId String
  checkout Checkout @relation(fields: [checkoutId],references: [id])
  checkoutId String
}